<div class="container">
  <div class="row">
    <div class="col-md-12 stretch-card grid-margin">
      <div class="card">
        <div class="card-header">
          <h3>Supervisor</h3>
        </div>
        <div class="card-body">
            <div class="pr">
              <%= gravatar_for(@course.user,'pr-img') %>
              <div class="pr-name">
                <p class="mb-1 text-black"><%= @course.user.name %></p>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 stretch-card grid-margin">
      <div class="card">
        <div class="card-header">
          <div class="r-card">
            <h3>Trainee</h3>
            <% if current_user.role %>
            <%= render 'modal_add_people' %>
            <i class="mdi mdi-account-plus" data-toggle="modal" data-target="#addPeople"></i>
            <% end %>
          </div>
        </div>
        <div class="card-body">
            <% @user_courses.each do |i| %>
            <div class="pr">
              <%= gravatar_for(i.user,'pr-img') %>
              <div class="pr-name">
                <p class="mb-1 text-black"><%= i.user.name %></p>
              </div>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
