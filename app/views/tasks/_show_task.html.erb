<div class="container">
  <div class = "row">
    <div class = "col-md-9">
      <div class="card">
        <div class="card-header">
          <h3>
            <i class="mdi mdi-calendar-text"></i>
            <%= @task.title %>
          </h3>
          <p>
            <%= @task.created_at %>
          </p>
        </div>
        <div class="card-body">
          <%= @task.description %>
        </div>
      </div>
    </div>
    <div class = "col-md-3">
      <div class="card">
        <div class="card-body">
          <div class="c-d">
            <%= link_to 'Edit this taks', edit_task_path, class: 'btn btn-block btn-lg btn-gradient-primary mt-4' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
